<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main1"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/shadow"
        android:scaleType="fitXY">

    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/union"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_32dp">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin_32dp"
        android:layout_marginRight="@dimen/margin_32dp"
        android:layout_marginBottom="@dimen/margin_32dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please choose a language:"
            android:textSize="@dimen/textsize_16sp"
            android:textColor="@color/white">

        </TextView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/arabic_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundbt"
            app:backgroundTint="@color/gold"
            android:text="Arabic"
            android:textColor="@color/gold"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/margin_8dp">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/english_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundbt"
            app:backgroundTint="@color/gold"
            android:text="English"
            android:textAllCaps="false"
            android:textColor="@color/gold"
            android:layout_marginTop="@dimen/margin_8dp">

        </com.google.android.material.button.MaterialButton>
    </LinearLayout>


</RelativeLayout>